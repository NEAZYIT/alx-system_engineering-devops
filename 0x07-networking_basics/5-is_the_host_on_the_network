#!/usr/bin/env bash
# This script pings an IP address passed as an argument five times.

# Check if an argument (IP address) is provided
if [ $# -eq 0 ]; then
    echo "Usage: $0 {IP_ADDRESS}"
    exit 1
fi

# Extract the IP address from the argument
ip_address="$1"

# Ping the IP address 5 times with quiet output
echo "Pinging $ip_address 5 times..."
ping -c 5 -q -W 1 "$ip_address"
