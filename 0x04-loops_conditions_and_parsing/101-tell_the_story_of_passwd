#!/usr/bin/env bash
# This script displays the content of the file /etc/passwd, using the while loop + IFS.

# Set the IFS variable to split the lines of the file on colons.
IFS=':'

# Open the /etc/passwd file for reading.
while read -r username password user_id group_id home_directory shell; do

  # Display the user information in the specified format.
  echo "The user $username is part of the $group_id gang, lives in $home_directory and rides $shell. USER ID's place is protected by the passcode $password, more info about the user here: $user_id"

done < /etc/passwd
