#!/usr/bin/env bash
# This script displays "Best School" 10 times, with "Hi" on the 9th iteration.

# Initialize a counter
counter=1

# Set the maximum number of iterations
max_iterations=10

# Start a while loop
while [ $counter -le $max_iterations ]
do
    # Check if it's the 9th iteration
    if [ $counter -eq 9 ]; then
        echo "Best School"
        echo "Hi"
    else
        echo "Best School"
    fi

    # Increment the counter
    counter=$((counter+1))
done
