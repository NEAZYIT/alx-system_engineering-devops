#!/usr/bin/env bash
# Comment explaining the script's purpose
# Script to ensure Nginx listens on port 80 of all active IPv4 IPs

# Backup Nginx default config
cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default_backup

# Modify Nginx config to listen on port 80
sed -i '/listen 80 default_server;/ c\    listen 80 default_server;' /etc/nginx/sites-available/default

# Restart Nginx to apply changes
service nginx restart
